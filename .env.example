# TGTG Scanner Environment Variables
# Copy this file to .env.local and fill in your actual values

# TGTG Configuration
TGTG_USERNAME=your-tgtg-email@example.com

# Scanner Settings
SLEEP_TIME=60
TZ=Europe/Berlin
LOCALE=en_US

# Notification Settings
CONSOLE=true
TELEGRAM=true

# Telegram Configuration (create new bot with @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_IDS=your_chat_id_here

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SENDER=your-email@gmail.com
SMTP_RECIPIENTS=your-email@gmail.com

# Discord Configuration (optional)
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_PREFIX=!

# Webhook Configuration (optional)
WEBHOOK_URL=your_webhook_url_here
WEBHOOK_METHOD=POST

# IFTTT Configuration (optional)
IFTTT_EVENT=your_event_name
IFTTT_KEY=your_ifttt_key

# NTFY Configuration (optional)
NTFY_SERVER=https://ntfy.sh
NTFY_TOPIC=your_topic_name
NTFY_PRIORITY=default

# Pushsafer Configuration (optional)
PUSHSAFER_KEY=your_pushsafer_key
PUSHSAFER_DEVICE_ID=your_device_id
